/* custom-tab-bar/index.wxss */
.tab-bar {
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  font-size: 20rpx;
  background-color: #ffffff;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 16rpx 0;
  padding: 0 24rpx;
}

.tab-bar-item image {
  width: 60rpx;
  height: 60rpx;
}